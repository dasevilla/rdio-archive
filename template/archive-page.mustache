<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="../static/css/bootstrap.min.css">
        <link href="../static/css/style.css" rel="stylesheet" type="text/css" media="all">
        <title>New music for week {{weekNumber}} &mdash; Page {{pageNumber}} &mdash; New Release Archive for Rdio&reg;</title>
        <meta content="Rdio albums released on {{releaseDate}} &mdash; page {{pageNumber}}" name="description">
    </head>
    <body>
        <div class="topbar">
            <div class="fill">
                <div class="container">
                    <a class="brand" href="#">New Release Archive for Rdio&reg;</a>
                    <ul class="nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="content">
                <div class="page-header">
                    <h1>Rdio Releases for {{releaseDate}} &mdash; Page {{pageNumber}}</h1>
                    <p>New music releases on Rdio for {{releaseDate}}</p>
                </div>

                {{#pagination}}
                <div id="top-pagination" class="row">
                    <div class="span16">
                        <div class="pagination">
                            <ul>
                                {{#prevLink}}
                                <li class="prev"><a rel="prev" href="{{prevLink}}">&larr; Previous</a></li>
                                {{/prevLink}}
                                {{^prevLink}}
                                <li class="prev disabled"><a href="#">&larr; Previous</a></li>
                                {{/prevLink}}

                                {{#nextLink}}
                                <li class="next"><a rel="next" href="{{nextLink}}">Next &rarr;</a></li>
                                {{/nextLink}}
                                {{^nextLink}}
                                <li class="next disabled"><a href="#">Next &rarr;</a></li>
                                {{/nextLink}}
                            </ul>
                        </div>
                    </div>
                </div>
                {{/pagination}}

                <div class="row">
                    <div class="span16">
                        <ul id="album-list" class="media-grid">
                            {{#albums}}
                            <li>
                                <a href="http://www.rdio.com/#{{url}}"
                                    class="album-link"
                                    title="{{name}}" data-artist="{{artist}}"
                                    {{#isClean}}data-clean="true"{{/isClean}}
                                    {{#isExplicit}}data-explicit="true"{{/isExplicit}}
                                    data-length="{{length}}" data-duration="{{duration}}">
                                    <img width="200" height="200" alt="Album art for {{name}} by {{artist}}" src="{{icon}}" class="thumbnail">
                                </a>
                            </li>
                            {{/albums}}
                        </ul>
                    </div>
                </div>
                {{#pagination}}
                <div id="bottom-pagination" class="row">
                    <div class="span16">
                        <div class="pagination">
                            <ul>
                                {{#prevLink}}
                                <li class="prev"><a rel="prev" href="{{prevLink}}">&larr; Previous</a></li>
                                {{/prevLink}}
                                {{^prevLink}}
                                <li class="prev disabled"><a href="#">&larr; Previous</a></li>
                                {{/prevLink}}

                                {{#nextLink}}
                                <li class="next"><a rel="next" href="{{nextLink}}">Next &rarr;</a></li>
                                {{/nextLink}}
                                {{^nextLink}}
                                <li class="next disabled"><a href="#">Next &rarr;</a></li>
                                {{/nextLink}}
                            </ul>
                        </div>
                    </div>
                </div>
                {{/pagination}}

                <div class="row well">
                    <div class="span16">
                        <h4>Other weeks</h4>
                        <div class="pagination">
                            <ul id="week-list">
                                {{#toc}}
                                <li class="{{#currentWeek}}active{{/currentWeek}}">
                                    <a href="../{{path}}" title="New music for week {{weekNumber}} on Rdio">{{weekNumber}}</a>
                                </li>
                                {{/toc}}
                            </ul>
                        </div>
                    </div>
                </div>

            </div> <!-- /content -->
        </div> <!-- /container -->

        <script src="../static/js/jquery-1.5.2.min.js"></script>
        <script src="../static/js/bootstrap-twipsy.js"></script>
        <script src="../static/js/bootstrap-popover.js"></script>
        <script src="../static/js/main.js"></script>
    </body>
</html>
